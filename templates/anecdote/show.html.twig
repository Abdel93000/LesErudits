{% extends 'base.html.twig' %}


{% block body %}
<section class="article">
<article>
    <h2>{{ anecdote.title }}</h2>
    <div class="metadata">Ecrit le {{ anecdote.createdAt | date('d/m/Y')}} à  {{ anecdote.createdAt | date('h:i')}} dans la catégorie {{ anecdote.category }}</div>
    <div class="content">
        <img src="{{ anecdote.image }}" alt="">
        {{ anecdote.content | raw }}
    </div>
</article>
{% endblock %}